@model List<Category>

<h2>Categories</h2>

<table class = "table table-striped">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>
                    @category.Id
                </td>
                <td>
                    @category.Name
                </td>
                <td>
                    @category.Description
                </td>
                <td>
                    <a asp-controller="categories" asp-action="edit" asp-route-id="@category.Id"><img src="/img/edit.png" /></a>
                    @* <a href="@($"/categories/edit/{category.Id}")">Edit</a> *@
                </td>
                <td>
                    <a asp-controller="categories" asp-action="delete" asp-route-id="@category.Id" onclick="return confirmDelete()"><img src="/img/delete.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class = "row mb-3">
        <div class = "col-2">
        <a asp-controller="Categories" asp-action="Add"><input type="submit" class="btn btn-primary" value="Add" /></a>
        </div>
        <div class="col-6">
        </div>
    </div>
    @section Scripts
    {
    <script>
        function confirmDelete(){
        return confirm("Do you want to delete this item?");
        }
    </script>
    }